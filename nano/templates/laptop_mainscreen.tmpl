<i>No program loaded. Please select program from list below.</i>
<table>
{{for data.programs}}
	<tr><td>{{:helper.link(value.desc, null, {'PC_runprogram' : value.name})}}
	{{if value.running}}
		<td>{{:helper.link('X', null, {'PC_killprogram' : value.name})}}
	{{else}}
		<td>{{:helper.link('X', null, {'PC_killprogram' : value.name}, 'disabled')}}
	{{/if}}
{{/for}}
</table>